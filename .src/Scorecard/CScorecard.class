Public Sub _new(hContainer As Container)

  $hPanel = New Panel(hContainer) As "Panel"

  With $hPanel
    .Arrangement = Arrange.Horizontal
    .Expand = True
  End With

End

Private Function Panel_Read() As Panel

  Return $hPanel

End

Public Sub NewGame()

  $bRegisterable = False
  $bUndoable = False
  $iActivePlayer = 0
  $iNumOfRolls = 0

  $hCurrentPlayer = New CCircularInt(0, MSettings.Players - 1)
